@model IEnumerable<Trippy_Land.Models.DiaDiem>
<!DOCTYPE html>
<html>
@Html.Partial("_Head")
<body>
    @Html.Partial("_Navigation")
    <section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('@Url.Content("~/Trippy_Land_Theme/images/maroon_bells_morning-wallpaper-1920x1080.jpg")');">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-center">
                <div class="col-md-9 ftco-animate pb-5 text-center">
                    <p class="breadcrumbs"><span class="mr-2"><a href="~/Home/Index">Home <i class="fa fa-chevron-right"></i></a></span> <span>Location <i class="fa fa-chevron-right"></i></span></p>
                    <h1 class="mb-0 bread">Location</h1>
                </div>
            </div>
        </div>
    </section>
    <section class="ftco-section">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                <div class="col-md-4 ftco-animate">
                    <div class="project-wrap">
                        <a href="#" class="img" style="background-image: url('@Url.Content("~/Content/Image/DiaDiem/" + item.PictureId)');">
                            <span class="price">
                            @item.TieuDe</span>
                        </a>
                        <div class="text p-4">
                            <span class="days">@item.HoatDongChinh</span>
                            <h3><a href="#">@item.TenDiaDiem</a></h3>
                            <p class="location"><span class="fa fa-archive"></span> @item.KinhNghiem</p>                           
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </section>
    <!-- loader -->
    @Html.Partial("_Loader")
    @Html.Partial("_AskForQuote")
    @Html.Partial("_Footer")
</body>
</html>
