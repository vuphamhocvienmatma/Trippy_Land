@model IEnumerable<Trippy_Land.Models.KhachSan>

@{
    ViewBag.Title = "Danh sách khách sạn";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("DanhSachKhachSan", "KhachSan", FormMethod.Post))
{
    <h2>Quản lý thông tin khách sạn</h2>
    <fieldset>
        <legend>Nhập thông tin tìm kiếm</legend>
        <table style="width:100%;">
            <tr>
                <td style="width:10%;">Từ khóa:</td>
                <td style="width:30%;">
                    @Html.TextBox("tuKhoa", null,
                   new { @class = "form-control" })
                </td>
                <td style="width:10%;">Tỉnh thành:</td>
                <td style="width:30%;">
                    @*Hiển thị danh sách loại khách hàng*@
                    @Html.DropDownList("idTinh", (SelectList)ViewBag.Tinh,
                   "---Tỉnh thành---", new { @class = "form-control" })
                </td>
                <td>
                    <input type="submit" value="Tìm kiếm" class="btn btn-primary" style="margin: 7.5px 0; text-align:right" ; />
                </td>
            </tr>
        </table>
    </fieldset>
}

<p>
    @Html.ActionLink("Thêm mới khách sạn", "ThemKhachSan", routeValues: null, htmlAttributes: new { @class = "btn btn-primary", @role = "button" })
</p>
<table id="example" class="table table-striped table-bordered table-hover table-responsive" style="width:100%">
    <thead>
        <tr>
            <th style="width: 250px;">
                @Html.DisplayNameFor(model => model.PictureId)
            </th>

            <th style="width: 150px;">
                @Html.DisplayNameFor(model => model.TenKhachSan)
            </th>
            <th style="width: 250px;">
                @Html.DisplayNameFor(model => model.ChiTiet)
            </th>
            <th style="width: 100px;">
                @Html.DisplayNameFor(model => model.DiaDiemChiTiet)
            </th>

            <th style="width: 100px;">
                @Html.DisplayNameFor(model => model.Price)
            </th>

            <th style="width: 100px;">
                @Html.DisplayNameFor(model => model.Tinh.TenTinh)
            </th>
            <th style="width: 150px;">
                Nghiệp vụ xử lý
            </th>
        </tr>
        </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/Content/Image/KhachSan/@item.PictureId" width="1000" height="1000" class="img-thumbnail" />
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.TenKhachSan)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ChiTiet)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaDiemChiTiet)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tinh.TenTinh)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "CapNhatKhachSan", new { id = item.Id }, new { @class = "lnkbuttonSua" })
                    @Html.ActionLink("Xóa", "XoaKhachSan", new { id = item.Id }, new { @class = "lnkbuttonXoa" })
                </td>
            </tr>
        }
    </tbody>
</table>