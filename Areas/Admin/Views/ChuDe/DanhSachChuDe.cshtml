@model IEnumerable<Trippy_Land.Models.ChuDeBaiVietVeDiaDiem>

@{
    ViewBag.Title = "Danh sách chủ đề";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<p>
    @Html.ActionLink("Thêm mới chủ đề", "ThemMoiChuDe", routeValues: null, htmlAttributes: new { @class = "btn btn-primary", @role = "button" })
</p>
<table class="table table-bordered table-hover table-responsive" style="width:50%">
    <tr>
        <th >
            @Html.DisplayNameFor(model => model.TenChuDe)
        </th>
        <th >
        Nghiệp vụ xử lý
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenChuDe)
            </td>
            <td>              
                @Html.ActionLink("Sửa", "CapNhatChuDe", new { id = item.Id}, new { @class = "lnkbuttonSua" }) 
                @Html.ActionLink("Xóa", "XoaChuDe", new { id = item.Id }, new { @class = "lnkbuttonXoa" })
            </td>         
        </tr>
    }
</table>
