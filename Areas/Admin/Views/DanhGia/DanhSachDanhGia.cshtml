@model IEnumerable<Trippy_Land.Models.DanhGia>

@{
    ViewBag.Title = "DanhSachDanhGia";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("DanhSachDanhGia", "DanhGia", FormMethod.Post))
{
    <h2>Quản lý thông tin đánh giá</h2>
    <fieldset>
        <legend>Nhập thông tin tìm kiếm</legend>
        <table style="width:100%;">
            <tr>
                <td style="width:10%;">Từ khóa:</td>
                <td style="width:30%;">
                    @Html.TextBox("tuKhoa", null,
                   new { @class = "form-control" })
                </td>
                <td style="width:10%;">Người dùng:</td>
                <td style="width:30%;">
                    @*Hiển thị danh sách tỉnh*@
                    @Html.DropDownList("idUser", (SelectList)ViewBag.User,
                   "---Người dùng---", new { @class = "form-control" })
                </td>
                <td>
                    <input type="submit" value="Tìm kiếm" class="btn btn-primary" style="margin: 7.5px 0; text-align:right" ; />
                </td>
            </tr>
        </table>
    </fieldset>
}
<p>
    @Html.ActionLink("Thêm mới", "ThemMoiDanhGia", routeValues: null, htmlAttributes: new { @class = "btn btn-primary", @role = "button" })
</p>
<table id="example" class="table table-striped table-bordered table-hover table-responsive" style="width:100%">
    <thead>
        <tr>
            <th style="width:200px">
                @Html.DisplayNameFor(model => model.User.TenDangNhap)
            </th>
            <th style="width:1000px">
                @Html.DisplayNameFor(model => model.NoiDungDanhGia)
            </th>
            <th style="width:200px">
            Nghiệp vụ xử lý
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.TenDangNhap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoiDungDanhGia)
                </td>
                <td>
                    @Html.ActionLink("Xóa", "XoaDanhGia", new { id = item.Id }, new { @class = "lnkbuttonXoa" })
                </td>
            </tr>
        }
    </tbody>
</table>
