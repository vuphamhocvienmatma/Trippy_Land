@model Trippy_Land.Models.UserRoleAndFunction

@{
    ViewBag.Title = "EditRoleAndFunc";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>EditRoleAndFunc</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>UserRoleAndFunction</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)



        <div class="form-group">
            @Html.LabelFor(model => model.UserRoleId, "Quyền", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.DropDownListFor(model => model.UserRoleId, (SelectList)ViewBag.Role, "---Quyền---", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UserRoleId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FuctionId, "Chức năng", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.DropDownListFor(model => model.FuctionId, (SelectList)ViewBag.Function, "---Chức năng---", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FuctionId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Trờ về", "DanhSachRoleAndFunc")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
