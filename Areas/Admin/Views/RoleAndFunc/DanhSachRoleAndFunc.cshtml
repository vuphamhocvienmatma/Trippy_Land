@model IEnumerable<Trippy_Land.Models.UserRoleAndFunction>

@{
    ViewBag.Title = "DanhSachRoleAndFunc";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý quyền truy cập</h2>
@using (Html.BeginForm("DanhSachRoleAndFunc", "RoleAndFunc", FormMethod.Post))
{
    <fieldset>
        <legend>Nhập thông tin tìm kiếm: </legend>
        <table style="width:100%;">            
            <tr>
                <td style="width:20%;">Quyền người dùng:</td>
                <td style="        width: 25%;">
                    
                    @Html.DropDownList("idRole", (SelectList)ViewBag.Role,
                   "---Quyền---", new { @class = "form-control" })
                </td>
                <td></td>
                <td></td>
                <td style="        width: 20%;">Chức năng:</td>
                <td style="width:25%;">
             
                    @Html.DropDownList("idFunction", (SelectList)ViewBag.Function,
                  "---Chức năng---", new { @class = "form-control" })
                </td>
                
            </tr>
            <tr>
                <td>
                    <input type="submit" value="Tìm kiếm" class="btn btn-primary" style="margin: 7.5px 0; text-align:right" ; />
                </td>
            </tr>
        </table>
    </fieldset>

}
<p>
    @Html.ActionLink("Thêm mới", "AddRoleAndFunc", routeValues: null, htmlAttributes: new { @class = "btn btn-primary", @role = "button" })
</p>
<table id="example" class="table table-striped table-bordered table-hover table-responsive" style="width:100%">
    <thead>
        <tr>
            <th style="width:500px">
                @Html.DisplayNameFor(model => model.Function.TenChucNang)
            </th>
            <th style="width:500px">
                @Html.DisplayNameFor(model => model.UserRole.TenRole)
            </th>
            <th style="width:200px">
                Nghiệp vụ xử lý
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Function.TenChucNang)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserRole.TenRole)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "EditRoleAndFunc", new { id = item.Id }, new { @class = "lnkbuttonSua" })
                    @Html.ActionLink("Xóa", "RemoveRoleAndFunc", new { id = item.Id }, new { @class = "lnkbuttonXoa" })
                </td>
            </tr>
        }
    </tbody>
</table>
