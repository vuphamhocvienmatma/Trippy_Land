@model IEnumerable<Trippy_Land.Models.User>

@{
    ViewBag.Title = "Danh sách người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách người dùng</h2>

<p>
    @Html.ActionLink("Thêm mới", "ThemMoiUser", routeValues: null, htmlAttributes: new { @class = "btn btn-primary", @role = "button" })
</p>
<table class="table table-bordered table-hover table-responsive" style="text-align:center">
    <tr>
        <th style="width: 600px;">
          Ảnh đại diện
        </th>
        <th style="width: 150px;">
            @Html.DisplayNameFor(model => model.TenDangNhap)
        </th>     
        <th style="width: 200px;">
            @Html.DisplayNameFor(model => model.TenNguoiDung)
        </th>
        <th style="width: 200px;">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th style="width: 100px;">
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th style="width: 150px;">
            @Html.DisplayNameFor(model => model.GioiTinh)
        </th>

        <th style="width: 150px;">
            @Html.DisplayNameFor(model => model.UserRole.TenRole)
        </th>

        <th style="width: 150px;">
            Nghiệp vụ xử lý
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="~/Content/Image/User/@item.PictureId" width="1000" height="1000" class="img-thumbnail" />
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.TenDangNhap)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.TenNguoiDung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GioiTinh)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.UserRole.TenRole)
            </td>
            
            <td>
                @Html.ActionLink("Sửa", "CapNhatUser", new { id = item.Id }, new { @class = "lnkbuttonSua" })
                @Html.ActionLink("Xóa", "XoaUser", new { id = item.Id }, new { @class = "lnkbuttonXoa" })
            </td>
        </tr>
    }
</table>
